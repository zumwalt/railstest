<div class="page-header">
  <h1>All Statuses</h1>
  <a href="/statuses/new" class="btn">Post New Status</a>
</div>

<% @statuses.each do |status| %>
  <div class="status">
    <div class="row">
      <div class="author span3">
        <strong><%= status.name %></strong>
      </div>
      <div class="content span6">
        <p><%= status.content %></p>
      </div>
      <div class="meta span3">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %> <span class="admin">| <%= link_to "Edit", edit_status_path(status) %> | <%= link_to "Delete", status, method: :delete, data: { confirm: "Hey. This can't be undone. Check yourself before you wreck yourself."} %></span>
      </div>
    </div>
    
  </div>
<% end %>